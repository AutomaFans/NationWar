<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ChoiceBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>

<!-- COMMENTO -->
<!--
        Mette un AnchorPane, poi dentro questo AnchorPane posiziona una label e imposta la il testo di questa label
        con la scritta "COMPLETA I SEGUENTI CAMPI PER AGGIUNGERE UNA NAZIONE." e posiziona questa label in alto.
        Poi posiziona un'altra label e imposta la il testo di questa label con la scritta "Nazione" e vicino a
        questa label posiziona un ChoiceBox (menu a tendina).
        Infine posiziona in basso due bottoni e imposta il testo dei due bottoni con la scritta "Elimina Nazione"
        per il bottone a sinistra,  e con la scritta "Close" per il bottone a destra
        -->

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1" fx:controller="interfacciaGrafica.ControllerAddNation">
    <children>
        <Label layoutX="14.0" layoutY="44.0" prefHeight="29.0" prefWidth="543.0" text="COMPLETA I SEGUENTI CAMPI PER AGGIUNGERE UNA NAZIONE." />
        <Label layoutX="72.0" layoutY="140.0" prefHeight="17.0" prefWidth="95.0" text="Nome Nazione:" />
        <TextField fx:id="txtNomeNazione" layoutX="163.0" layoutY="136.0" prefHeight="25.0" prefWidth="296.0" text="Inserisci nome della nazione che vuoi aggiungere">
         <cursor>
            <Cursor fx:constant="TEXT" />
         </cursor></TextField>
        <Label layoutX="78.0" layoutY="198.0" text="Colore Nazione" />
        <Button fx:id="buttonClose" layoutX="505.0" layoutY="354.0" mnemonicParsing="false" onAction="#clickClose" prefHeight="25.0" prefWidth="71.0" text="Close">
         <cursor>
            <Cursor fx:constant="OPEN_HAND" />
         </cursor></Button>
        <ChoiceBox fx:id="coloreNazione" layoutX="167.0" layoutY="194.0" prefHeight="25.0" prefWidth="225.0" />
        <Button fx:id="buttonAggiungi" layoutX="325.0" layoutY="354.0" mnemonicParsing="false" onAction="#clickAggiungiNazione" prefHeight="25.0" prefWidth="127.0" text="Aggiungi Nazione">
         <cursor>
            <Cursor fx:constant="OPEN_HAND" />
         </cursor></Button>
    </children>
</AnchorPane>
